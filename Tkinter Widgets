'''
from tkinter import *

root=Tk()
root.geometry('400x300')
root.title('main')

def topwindow():
    top=Toplevel()
    top.geometry("180x100")
    top.title("toplevel")
    L2=Label(top,text="This is a toplevel window")
    L2.pack()

    top.mainloop()

L=Label(root,text="This is the root window")
button=Button(root,text="Click here to open another window", command=topwindow)

L.pack()
button.pack()
root.mainloop()
'''
