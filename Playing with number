#Palindrome
def is_palindrome(text):
    text=text.lower()
    length=len(text)
    for i in range(length//2):
        if text[i]!=text[length-i-1]:
            return False
    return True

word=input("Enter a word: ")

if is_palindrome(word):
    print("Palindrome")
else:
    print("Not a Palindrome")

#Highest Common Multiple
#Input two numbers
#Find the smaller numbers
#Get the factors for the smallest and largest numbers by dividing by every number from 1
#If both are divisible by a number then uodate the HCF
#Print the final HCF

Number1=int(input("Enter the first number: "))
Number2=int(input("Enter the second number: "))

def calculate_HCF(x,y):
    if x>y:
        smaller_number=y
    else:
        smaller_number=x
    for i in range(1,smaller_number+1):
        if(x%i==0) and (y%i==0):
            HCF=i
    return HCF

print("The HCF is",calculate_HCF(Number1,Number2))

#Lowest Common Multiple
Number1=int(input("Enter the first number: "))
Number2=int(input("Enter the second number: "))

def find_LCM(x,y):
    if x>y:
        larger_number=x
    else:
        larger_number=y
    while True:
        if larger_number%x==0 and larger_number%y==0:
            return larger_number
        larger_number+=1

print("The LCM is",find_LCM(Number1,Number2))

def power(base,exponent):
    result=1
    for _ in range(exponent):
        result=result*base
    return result
base=int(input("Base= "))
exponent=int(input("Exponent= "))
print(f"{base}^{exponent}={power(base,exponent)}")
